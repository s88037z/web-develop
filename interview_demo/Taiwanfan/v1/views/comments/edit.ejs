<% include ../partials/header %>


  <div class="row">	
	<h1 class="col-12 text-center">Edit Comment </h1>
	  
	<div id="comment-form">
		<form class="col-12 form-group" 
			  action="/campgrounds/<%=campgroundId %>/comments/<%=comment._id%>?_method=PUT" 
			  method="POST">

			<div class="form-group">
				<label for="comment-text"  >Description</label>
				<textarea id="comment-text" class="form-control" name="comment[text]"><%=comment.text %></textarea>
			</div>
	
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" >Submit!</button>
			</div>			
				<a class="col-12" href="/campgrounds/<%=campgroundId%>">Back</a>
		</form>
	</div>
	  

  </div>

<% include ../partials/footer %>
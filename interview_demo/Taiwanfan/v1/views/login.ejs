<% include ./partials/header %>

	
<div class=row>
	
	<h1 class="col-12 text-center pr-4">登入</h1>
	
	<div style="" class="mx-auto  col-sm-10 col-md-8 col-lg-4 px-4">
		<form class="text-center "action="/login" method="post">
			<div class="form-group row text-center">
					<label for="login-username" class=" col-5 col-form-label ">使用者名稱</label>
					<div class="col-7 ">
						<input id="login-username" class="form-control" type="text" 
							   name="username" placeholder="username">
					</div>
			</div>
			<div class="form-group row text-center">
				<label for="login-password" class="col-5 col-form-label">密碼</label>
				<div class="col-7 ">
					<input id="login-password" class="form-control" 
						   type="password" name="password" placeholder="password">	
				</div>
			</div>
			<div class="col-8  mx-auto">
				<button class="btn btn-lg btn-primary btn-block" >登入</button>
				<div class="row">
					<div class="col-5 text-left mt-3 ">
						<a  href="/campgrounds">返回</a>
					</div>
					<div class="col-7 text-right mt-3 ">
						<a  href="/forgot">忘記密碼</a>
					</div>

				</div>	
					
			</div>
			
		</form>
		
	</div>

</div>





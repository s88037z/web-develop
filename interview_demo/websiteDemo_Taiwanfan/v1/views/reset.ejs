<% include ./partials/header %>

<div class="row">
	<div class=" mx-auto col-sm-10 col-md-8 col-lg-4 px-4">
		<form action="/reset/<%= token %>" method="POST">
		  <h1>密碼重設</h1>
		  <div class="form-group">
		    <label for="password">新密碼</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm">新密碼確認</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary">更新密碼</button>
		  </div>
		</form>
	</div>
</div>

<% include ./partials/footer %>
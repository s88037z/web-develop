<% include ./partials/header %>

<div class=row>
	
	<h1 class="col-12 text-center pr-4 mb-4">註冊</h1>
	
	<div style="" class="mx-auto col-sm-10 col-md-8 col-lg-4 px-4">
		<form class="text-center "action="/register" method="post">
			<div class="form-group row text-center">
					<label for="register-username" class=" col-4 col-form-label ">使用者名稱</label>
					<div class="col-8 ">
						<input id="register-username" class="form-control" type="text" 
							   name="username" placeholder="username" required>
					</div>
			</div>
			<div class="form-group row text-center">
				<label for="register-email" class="col-4 col-form-label">電子信箱</label>
				<div class="col-8 ">
					<input id="register-email" class="form-control" 
						   type="email" name="email" placeholder="Ex@example.com" required>	
				</div>
			</div>
						<div class="form-group row text-center">
				<label for="register-fisrtName" class="col-4 col-form-label">名字</label>
				<div class="col-8 ">
					<input id="register-fisrtName" class="form-control" 
						   type="text" name="fisrtName" placeholder="">	
				</div>
			</div>
						<div class="form-group row text-center">
				<label for="register-lastName" class="col-4 col-form-label">姓</label>
				<div class="col-8 ">
					<input id="register-lastName" class="form-control" 
						   type="text" name="lastName" placeholder="">	
				</div>
			</div>
						<div class="form-group row text-center">
				<label for="register-password" class="col-4 col-form-label">密碼</label>
				<div class="col-8 ">
					<input id="register-password" class="form-control" 
						   type="password" name="password" placeholder="password" required>	
				</div>
			</div>
			
			
			<div class="col-8  mx-auto">
				<button class="btn btn-lg btn-primary btn-block" >提交</button>
				<div class="col-12 text-left mt-3 pl-0">
					<a  href="/campgrounds">返回</a>
				</div>
			</div>
			
		</form>
		
	</div>

</div>











<% include ./partials/footer %>
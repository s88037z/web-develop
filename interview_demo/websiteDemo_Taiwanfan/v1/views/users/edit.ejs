<% include ../partials/header %>


  <div class="row">	
	<h1 class="col-12 text-center">編輯<%=user.username%>的個人資料 </h1>
	  
	<div id="comment-form">
		<form class="col-12 form-group" 
			  action="/users/<%=user.id%>?_method=PUT" 
			  method="POST">

			<div class="form-group">
				<label for="avatar"  >大頭照</label>
				<input type="text" id="avatar" 
					   class="form-control" name="user[avatar]"value="<%=user.avatar %>"></input>
			</div>
			<div class="form-group">
				<label for="description"  >自我介紹</label>
				<textarea id="description" class="form-control" 
						  name="user[description]"><%=user.description %></textarea>
			</div>
		
		
		
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" >提交</button>
			</div>			
				<a class="col-12" href="/users/<%=user.id%>">返回</a>
		</form>
	</div>
	  

  </div>

<% include ../partials/footer %>
<% include partials/header%>

<div class="ui main text container segment">
	<div class="ui huge header">
		New Blogs
	</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input name="blog[title]" type="text" placeholder="title">
		</div>
		<div class="field">
			<label>Image</label>
			<input name="blog[image]" type="text" placeholder="image">	
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"  placeholder="" required ></textarea>
		</div>
		<input class="ui big primary basic button" type="submit" required >
		
	</form>
	
	
	
	
</div>


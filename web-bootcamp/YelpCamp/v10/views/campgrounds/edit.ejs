<% include ../partials/header %>

<div class="container">
  <div class="row">	
	<h1 class="col-12 text-center">Edit <%=campground.name%></h1>
	  
	<div style="width:30% ; margin: 25px auto">
		<form class="col-12 form-group" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" name="campground[name]"  value="<%=campground.name%>" type="text">
			</div>
			<div class="form-group">
				<input class="form-control" name="campground[image]" value="<%=campground.image%>" type="text">
			</div>
			<div class="form-group">
				<input class="form-control" name="campground[description]" value="<%=campground.description%>" 
					   type="text">
			</div>			
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" >Submit!</button>
			</div>			
				<a class="col-12" href="/campgrounds">Back</a>
		</form>
	</div>
	  

  </div>
</div>
<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
  <div class="row">	
	<h1 class="col-12 text-center">Add new Comment to <%=campground.name %></h1>
	  
	<div style="width:30% ; margin: 25px auto">
		<form class="col-12 form-group" action="/campgrounds/<%=campground._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" name="comment[text]" placeholder="text" type="text">
			</div>

	
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" >Submit!</button>
			</div>			
				<a class="col-12" href="/campgrounds/<%=campground._id %>">Back</a>
		</form>
	</div>
	  

  </div>
</div>
<% include ../partials/footer %>
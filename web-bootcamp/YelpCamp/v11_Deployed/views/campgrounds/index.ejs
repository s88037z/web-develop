<% include ../partials/header %>

	
	<header class="jumbotron">
		<div class="container">  <!--  <== this seem not necessary  -->
			<h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all of the world </p>
			<p>
				<a class="btn btn-primary btn-lg mb-2" href="/campgrounds/new">Add a new  
					campground</a>
			</p>
			<p>
				<form class="form-inline" action="/campgrounds" method="GET">
					<div class="form-group inline">
						<input class="mr-sm-1 form-control" type="text" name="search" placeholder="Campground search">
						<input  class="btn btn-light" type="submit" value="Search"> 
					</div>
				</form>		
			</p>
			
			
		</div>
	</header>

	<div class="row mb-3">
		<div class="col-lg-12">
			<h3>Our most popular Campground:</h3>
		</div>
	</div>
	
	<% if(noCamps!==undefined){ %>
		<h5><%= noCamps %></h5>
		
	<% } %>
	<div class="row text-center" style="display:flex; flex-wrap:wrap ">
		<% campgrounds.forEach((camp)=>{ %>
		  <div class="col-md-3 col-sm-6 mb-4">
			  <div class="card">
				<img class="card-img-top" src="<%=camp.image%>">
				<div class="card-body p-3">
					<h5 class="card-title m-0"><%=camp.name%></h5>
			   </div>
			   <p>
				   <a href="/campgrounds/<%=camp._id %>" class="btn btn-primary">More Info</a>
			   </p>
			</div> 
		  </div>

		<% }) %>
	</div>
	




<% include ../partials/footer %>

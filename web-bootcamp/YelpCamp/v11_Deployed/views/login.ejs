<% include ./partials/header %>

	
<div class=row>
	
	<h1 class="col-12 text-center pr-4">Login</h1>
	
	<div style="" class="mx-auto  col-sm-10 col-md-8 col-lg-4 px-4">
		<form class="text-center "action="/login" method="post">
			<div class="form-group row text-center">
					<label for="login-username" class=" col-4 col-form-label ">Username</label>
					<div class="col-8 ">
						<input id="login-username" class="form-control" type="text" 
							   name="username" placeholder="username">
					</div>
			</div>
			<div class="form-group row text-center">
				<label for="login-password" class="col-4 col-form-label">Password</label>
				<div class="col-8 ">
					<input id="login-password" class="form-control" 
						   type="password" name="password" placeholder="password">	
				</div>
			</div>
			<div class="col-8  mx-auto">
				<button class="btn btn-lg btn-primary btn-block" >Login</button>
				<div class="col-12 text-left mt-3 pl-0">
					<a  href="/campgrounds">Back</a>
				</div>
			</div>
			
		</form>
		
	</div>

</div>




<% include ./partials/footer %>
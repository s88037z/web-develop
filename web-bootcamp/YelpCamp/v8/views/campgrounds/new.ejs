<% include ../partials/header %>

<div class="container">
  <div class="row">	
	<h1 class="col-12 text-center">Create a new Campground</h1>
	  
	<div style="width:30% ; margin: 25px auto">
		<form class="col-12 form-group" action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" name="name" placeholder="name" type="text">
			</div>
			<div class="form-group">
				<input class="form-control" name="image" placeholder="img url" type="text">
			</div>
			<div class="form-group">
				<input class="form-control" name="description" placeholder="description" type="text">
			</div>			
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" >Submit!</button>
			</div>			
				<a class="col-12" href="/campgrounds">Back</a>
		</form>
	</div>
	  

  </div>
</div>
<% include ../partials/footer %>